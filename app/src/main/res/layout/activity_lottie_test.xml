<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.duckduckgo.app.privacy.ui.LottieTest">

    <LinearLayout
        android:id="@+id/fakeURLBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/daxIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/privacyGradeContentDescription"
            android:gravity="center"
            android:src="@drawable/ic_ddg_logo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/badgeIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            app:lottie_loop="false" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/trackersBlocked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            app:lottie_loop="true" />

        <ImageView
            android:id="@+id/demoImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/demoImg2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/network_logo_amazon_technologies_inc" />

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/background_tracker_logo">
            <ImageView
                android:id="@+id/demoImg3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:importantForAccessibility="no"
                android:src="@drawable/network_logo_amazon_technologies_inc" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fakeURLBarBig"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/privacyGradeContentDescription"
            android:gravity="center"
            android:src="@drawable/ic_ddg_logo" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/badgeIconBig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            app:lottie_loop="false" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/trackersBlockedBig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:lottie_loop="true" />

    </LinearLayout>

</LinearLayout>